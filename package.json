{
  "name": "mdrd",
  "version": "0.0.8",
  "description": "Render markdown with code highlighting, katex, mermaid",
  "keywords": [
    "markdown",
    "highlight",
    "highlighting",
    "latex",
    "marked",
    "katex",
    "mermaid",
    "react",
    "web",
    "worker",
    "webworker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Cweili/mdrd.git"
  },
  "author": "Cweili",
  "license": "MIT",
  "homepage": "https://cweili.github.io/mdrd",
  "bugs": {
    "url": "https://github.com/Cweili/mdrd/issues"
  },
  "main": "dist/mdrd.js",
  "module": "dist/mdrd.mjs",
  "unpkg": "dist/mdrd.umd.js",
  "jsdelivr": "dist/mdrd.umd.js",
  "files": [
    "dist/!(docs)"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "vite build",
    "test": "test-storybook --coverage --coverageDirectory=coverage",
    "coverage": "nyc report --reporter=lcov -t coverage --report-dir coverage",
    "dev": "storybook dev --docs --disable-telemetry -p 6006",
    "build:docs": "storybook build --docs --disable-telemetry -o dist/docs"
  },
  "dependencies": {
    "async-throttle-cache": "^1.1.4",
    "clipboard-copy": "^4.0.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^7.4.0",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.4.0",
    "@storybook/builder-vite": "^7.4.0",
    "@storybook/jest": "^0.2.2",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/testing-library": "^0.2.0",
    "@types/katex": "^0.16.5",
    "@types/prismjs": "^1.26.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-storybook": "^0.6.13",
    "marked": "^13.0.1",
    "marked-highlight": "^2.0.6",
    "mermaid": "^10.5.0",
    "nyc": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.66.1",
    "storybook": "^7.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.2",
    "vite-plugin-dts": "^3.5.3",
    "vite-plugin-istanbul": "^5.0.0",
    "vite-plugin-lib-inject-css": "^2.1.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}
